include navbar

head
  title=contest.name

-function two(x) {return ((x>9)?"":"0")+x}
-function three(x) {return ((x>99)?"":"0")+((x>9)?"":"0")+x}

-function time(ms) {var sec = Math.floor(ms/1000);  ms = ms % 1000;  t = three(ms);  var min = Math.floor(sec/60);  sec = sec % 60;  t = two(sec) + ":" + t;  var hr = Math.floor(min/60);  min = min % 60;  t = two(min) + ":" + t; var day = Math.floor(hr/60);  hr = hr % 60;  t = two(hr) + ":" + t;   return t;  }



body
  h1(style="padding:20px;padding-left:50px") #{contest.name} Leaderboard
  div(style="padding-left:20px;padding-right:20px")
    table.table.table-hover
      thead.text-center
        tr
          th RANK
          th USN / ID
          th NAME
          th POINTS
          th TIME (HH:MM:SS:MS)
      tbody
        each i,j in contest.leaderboard
          -if(j==0)
            tr.table-success.text-center
              td=j+1
              td 
                a(href="/viewProfile/"+i.usn+"" style="font-weight:bold;color:grey") #{i.usn}
              td=i.name
              td=i.points
              td #{time(i.timestamp)}
          -else if(j==1)
            tr.table-primary.text-center
              td=j+1
              td 
                a(href="/viewProfile/"+i.usn+"" style="font-weight:bold;color:grey") #{i.usn}
              td=i.name
              td=i.points
              td #{time(i.timestamp)}
          -else if(j==2)
            tr.table-warning.text-center
              td=j+1
              td 
                a(href="/viewProfile/"+i.usn+"" style="font-weight:bold;color:grey") #{i.usn}
              td=i.name
              td=i.points
              td #{time(i.timestamp)}
          -else
            tr.text-center
              td=j+1
              td 
                a(href="/viewProfile/"+i.usn+"" style="font-weight:bold;") #{i.usn}
              td=i.name
              td=i.points
              td #{time(i.timestamp)}
