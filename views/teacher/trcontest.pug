include nav
link(rel="stylesheet", href="/css/contest_card.css")
script(src="/js/contest_card.js")
style.
  .admin{
  float: right;
  margin-right: 20px;
  }
  body{
  background-color:#f4f5fa;
  }

  .card{
  border-radius:5px;
  border:none;
  webkit-box-shadow: 0 1px 15px 1px rgba(62,57,107,.07);
  box-shadow: 0 1px 15px 1px rgba(62,57,107,.07);
  /*border-left: 4px #17A2B8 solid;*/
  margin-left:10px;
  }



.jumbotron.bg-info
  h1.text-center.text-light Contest
br
.row(style="width:100%")
  
  .col-lg-9.col-md-10  
    .row
      each i in contest 
        .col-lg-4  
          .container_card
            .c-card-block
              a(href="/contest/"+i.url)
                .cheader
                  h4 #{ i.name}
                  br
                p.block-with-text=i.description
                button.attem.btn.btn-info(type='button' onclick="location.href=/contest/"+i.url+"") View

  .col-lg-3.col-md-2  
    div(style="margin-top:50px;")
      h2.card-title.text-center Administration
      hr(style="border-color:grey;")
      .row
        .col.text-center
          a.btn(href='/contest/create' style="font-size:20px;") 
            i.fas.fa-plus-square
            label(style="cursor: pointer") &nbsp; Create Contest
      .row
        .col.text-center
          a.btn(href='/contest/manage' style="font-size:20px;")
            i.fas.fa-cogs 
            label(style="cursor: pointer") &nbsp; Manage Contest
  
  
