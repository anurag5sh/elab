doctype html
html
    head
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1.0, shrink-to-fit=no')
        link(rel='stylesheet', href='/assets/bootstrap/css/bootstrap.min.css')
        link(rel='stylesheet', href='/assets/css/Navigation-Clean.css')
        link(rel='stylesheet', href='/assets/css/styles.css')
        link(rel='stylesheet' href='/adminLTE/plugins/fontawesome-free/css/all.min.css')
        script(src="/assets/bootstrap/js/popper.min.js")
        script(src='/assets/js/jquery.min.js')
        script(src='/assets/bootstrap/js/bootstrap.min.js')
        script(src="/js/toastr.min.js")
        link(rel="stylesheet", href="/css/toastr.min.css")
        block head
        style.
            .colo{
                color:white;
            }
    body
        div
            nav.navbar.navbar-light.navbar-expand-md.navigation-clean(style='background-color:#1aa3ff;')
                .container
                    a.navbar-brand(href='/') ELAB
                    button.navbar-toggler(data-toggle='collapse', data-target='#navcol-1')
                        span.sr-only Toggle navigation
                        span.navbar-toggler-icon
                    #navcol-1.collapse.navbar-collapse
                        ul.nav.navbar-nav.ml-auto
                            -if(session.isAdmin)
                                li.nav-item(role='presentation')
                                    a.nav-link(href='/admin')
                                        p Admin Panel
                            li.nav-item(role='presentation')
                                a.nav-link(href='/practice', style='letter-spacing: normal;')
                                    strong.color PRACTICE
                            li.nav-item(role='presentation')
                                a.nav-link(href='/contest')
                                    strong.color CONTEST
                            li.dropdown.nav-item
                                a.dropdown-toggle.nav-link(data-toggle='dropdown', aria-expanded='false', href='#')
                                    strong.color ASSIGNMENT
                                .dropdown-menu(role='menu')
                                    a.dropdown-item(role='presentation' href='/assignment')
                                        strong VIEW ASSIGNMENT
                                    a.dropdown-item(role='presentation' href='/assignment/manage')
                                        strong MANAGE ASSIGNMENT
                            li.dropdown.nav-item
                                a.dropdown-toggle.nav-link(data-toggle='dropdown', aria-expanded='false', href='#') #{session.fname.toUpperCase()}
                                    
                                .dropdown-menu(role='menu')
                                    a.dropdown-item(role='presentation', href='/profile')
                                        strong PROFILE
                                    a.dropdown-item(role='presentation', href='/logout')
                                        strong LOGOUT
        block content

