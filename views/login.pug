doctype html
html(lang='en')
  head
    title Elab Login
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/assets/bootstrap/css/bootstrap.min.css')
    link(rel='icon', type='image/png', href='/images/icons/favicon.ico')
    link(rel='stylesheet', type='text/css', href='/vendor/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet', type='text/css', href='/fonts/font-awesome-4.7.0/css/font-awesome.min.css')
    link(rel='stylesheet', type='text/css', href='/fonts/Linearicons-Free-v1.0.0/icon-font.min.css')
    link(rel='stylesheet', type='text/css', href='/vendor/animate/animate.css')
    link(rel='stylesheet', type='text/css', href='/vendor/css-hamburgers/hamburgers.min.css')
    link(rel='stylesheet', type='text/css', href='/vendor/select2/select2.min.css')
    link(rel='stylesheet', type='text/css', href='/css/util.css')
    link(rel='stylesheet', type='text/css', href='/css/main.css')
    script(src='/vendor/jquery/jquery-3.2.1.min.js')
    script(src="/js/toastr.min.js")
    link(rel="stylesheet", href="/css/toastr.min.css")

    
  body
    .limiter
      .container-login100
        .wrap-login100.p-l-50.p-r-50.p-t-77.p-b-30
          form.login100-form.validate-form#login(onsubmit="return login()")
            span.login100-form-title.p-b-55
              | Login
            .wrap-input100.validate-input.m-b-16(data-validate='Valid email is required: ex@abc.xyz')
              input.input100(type='text', name='email', placeholder='Email')
              span.focus-input100
              span.symbol-input100
                span.fa.fa-envelope
            .wrap-input100.validate-input.m-b-16(data-validate='Password is required')
              input.input100(type='password', name='password', placeholder='Password')
              span.focus-input100
              span.symbol-input100
                
                span.fa.fa-lock
            //- input.form-radio(type='radio', name='type', value='student',checked="checked")
            //- | Student
            .row#row
              .col-6  
                .custom-control.custom-radio
                  input#student.custom-control-input(type='radio', name='type', value='student', checked="checked")
                  label.custom-control-label(for='student') Student
              .col-6
                .custom-control.custom-radio
                  input#teacher.custom-control-input(type='radio', name='type', value='teacher')
                  label.custom-control-label(for='teacher') Teacher

            //- input.form-radio(type='radio', name='type', value='teacher')
            //- | Teacher
          
            .container-login100-form-btn.p-t-25
              input.login100-form-btn(type="Submit" value="Login")
            .forgot-password
              br
              a(href='/forgotPassword') Forgot password?
            
    // ===============================================================================================
    script(src='/vendor/bootstrap/js/popper.js')
    script(src='/vendor/bootstrap/js/bootstrap.min.js')
    // ===============================================================================================
    script(src='/vendor/select2/select2.min.js')
    // ===============================================================================================
    script(src='/js/main.js')
    script.
      function login(){
        $.post('/',$('#login').serialize(),function(data,status){
        window.location.replace(data);
      }).fail((err)=>{
        toastr.error(err.responseText);
      });
      return false;
      }
      