    include ../footer    
    script.
        $.get('/contest/studentReport/!{contest.url}',function(data,status){
                    const submissions = $('#submission').DataTable( {
                        "data":data,
                        "columns": [
                            { "data": null },
                            { "data": "usn" },
                            { "data": "name" },
                            { "data": "questions" },
                            { "data": "lang" },
                            { "data": "code" },
                            { "data": "time" },
                            { "data": "points" },
                        ],
                        "order": [[ 1, 'asc' ]],
                        "columnDefs": [ {"searchable": false,"orderable": false,"targets": 0},
                                        { "width": "1%", "targets": 0 },
                                        {"searchable": false,"orderable": false,"targets": 5},
                                        {"searchable": false,"targets": 4},
                                        {"searchable": false,"targets": 3},
                                        {"searchable": false,"targets": 6},
                                        {"searchable": false,"targets": 7} ]
                    } );
                     submissions.on( 'order.dt search.dt', function () {
                        submissions.column(0, {search:'applied', order:'applied'}).nodes().each( function (cell, i) {
                            cell.innerHTML = i+1;
                        } );
                    } ).draw();
                }).fail((err)=>{
                    toastr.error(err.responseText);
                });

        
        $("#source").on('show.bs.modal',function (e){
            $("#sourceBody").empty();
            $("#pdf").attr('href',"/contest/studentReportDownload/!{contest.url}/"+$(e.relatedTarget).data('usn')+"?download=true")
            $.get('/contest/studentReport/!{contest.url}/'+$(e.relatedTarget).data('usn'),function(data,status){
                $.each(data,function (index,val){
                    let html = (index+1)+")<br>";
                    html += "<div class='row'><div class='col-8'><p><strong>Question Name : "+val.name +"</strong></p></div>";
                    html += "<div class='col-4'><p class='float-right'>Status : "+val.status+"</p></div></div>";
                    html += "<div class='row'><div class='col-8'><p>Language : "+val.language+"</p></div>";
                    html += "<div class='col-4'><p class='float-right'>Points : "+val.points+"</p></div></div>";
                    html += "<p>Time :  "+val.time+"</p>"
                    html += `<div style='font-family: "Source Code Pro" ;white-space: pre-wrap;background-color: #cfd8dc ; padding:5px'>`+he.escape(val.sourceCode)+"</div>"
                    html +="<br>"
                    $("#sourceBody").append(html);
                });
                
            });

        });