doctype html
include navbar
head
  link(rel='stylesheet' type='text/css' href='assets/css/light.css')

  title profile
  
body
  br
  .content(style="color:#9A9A9A;")
    .container-fluid
      .row
        .col-md-8
          .card
            .header
              h4.title(style="margin-top:15px;margin-left:15px;margin-bottom:8px;") Edit Profile
            .content
              form
                .row
                  .col-md-4
                    .form-group
                      label USN
                      input.form-control(type='text' readonly placeholder='' value=student.usn)
                  .col-md-4
                    .form-group
                      label First Name
                      input.form-control(type='text' readonly placeholder='First Name' value=student.name)    
                  .col-md-4
                    .form-group
                      label Last Name
                      input.form-control(type='text' readonly placeholder='Last Name' value='') 
                .row
                  .col-md-6
                    .form-group
                      label Priamry Email
                      input.form-control(type='email' readonly placeholder='' value=student.email)
                  .col-md-6
                    .form-group
                      label(for='exampleInputEmail1') Recovery Email
                      input.form-control(type='email' placeholder='Email')
                .row
                  .col-md-12
                    .form-group
                      label About Me
                      textarea.form-control(rows='5' placeholder='Here can be your description' value='')
                button.btn.btn-info.btn-fill.pull-right(type='submit') Update Profile
                .clearfix
        .col-md-4
          .card.card-user
            .image
              img(src='https://ununsplash.imgix.net/photo-1431578500526-4d9613015464?fit=crop&fm=jpg&h=300&q=75&w=400' alt='...')
            .content
              .author
                a(href='#')
                  img.avatar.border-gray(src='images/face-3.jpg' alt='...')
            hr
            br

  .content(style="color:#9A9A9A;")
    .container-fluid
      .row
        .col-md-4
          .card
            .header
              h4.title(style="margin-top:15px;margin-left:15px;margin-bottom:8px;") Update Password
            .content
              form
                .row
                  .col-md-8
                    .form-group
                      label Current Password
                      input.form-control(type='password'  placeholder='' value="")
                .row
                  .col-md-8
                    .form-group
                      label New Password
                      input.form-control(type='password'  placeholder='' value="")
                .row
                  .col-md-8
                    .form-group
                      label Re-enter New Password
                      input.form-control(type='password'  placeholder='' value="")
                button.btn.btn-info.btn-fill.pull-right(type='submit') Update Password
                .clearfix

