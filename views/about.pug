  style.
    
    .section-header h3 {
      font-size: 36px;
      color: #283d50;
      text-align: center;
      font-weight: 500;
      position: relative;
      margin-top: 20px;
    }
    .section-header p {
      text-align: center;
      margin: auto;
      font-size: 15px;
      padding-bottom: 60px;
      color: #556877;
      width: 50%;
    }
    .content-center{
      margin-left:20px!important;
      margin-right:20px!important;
    }
    .lb_heading{
      font-family:'Palanquin Dark';
      color:#666666!important;
