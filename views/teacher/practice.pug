        hljs.configure({   
            languages: ['javascript', 'python','c','c++','c#']
        });
    style.
        body{
            background-color:#f5f5f0;
        }
        .pull-right{
                float:right;
                margin:3px;
                font-size:12px;
        }
        .trans{
        position:absolute;
        right:60px;
        left:60px;
        padding-top:30px;
        background:transparent;
        background-color:transparent!important;
        }
        .card {
            width: 90%;
            box-shadow: 0 0.5px 2px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
            text-align: left;
            left: 20px;
            padding: 10px;
            margin: 20px;
            position: relative; 
