  body
    .contestform
      div
        form#con
          label(for='Contest') Contest Name
          input.form-control.mwidth#Contest(type='text', name='Contestname', placeholder='Contest', required='true',value=contest.name)
          br
          label(for='Start Time') Date
          input#timings.form-control.mwidth(type='text' name='timings' )
          br
          label(for='descrip') Description
          input.form-control.mwidth#Contest(type='text', name='description', placeholder='Description', required='true',value = contest.description)
          br
          br
          .row
            label(for='select ') For:
            - let y = [false,false,false,false,false];
            - for(i=1;i<=contest.year.length;i++) y[contest.year[i-1]]=true;
            .col-1.custom-control.custom-checkbox
              input(type='checkbox',class= "custom-control-input", name='year', id="1-year", value='1',checked=y[1])
              label(class="custom-control-label" for="1-year") 1st Year
            .col-1.custom-control.custom-checkbox
              input(type='checkbox', class= "custom-control-input",name='year',id="2-year" ,value='2',checked=y[2])
              label(class="custom-control-label" for="2-year") 2nd Year
            .col-1.custom-control.custom-checkbox
              input(type='checkbox', class= "custom-control-input",name='year',id="3-year", value='3',checked=y[3])
              label(class="custom-control-label" for="3-year") 3rd Year
            .col-1.custom-control.custom-checkbox
              input(type='checkbox', class= "custom-control-input",name='year',id="4-year", value='4', checked=y[4])
              label(class="custom-control-label" for="4-year") 4th Year
          br
          br
          input(type='button', value='SAVE SETTINGS', onclick="submitForm()")

          script.
            $(function() {
              $('#timings').daterangepicker({
                timePicker: true,
                startDate:  new Date("#{contest.timings.starts}"),
                endDate: new Date("#{contest.timings.ends}"),
                locale: {
                  format: 'YYYY/MM/DD hh:mm A'
                  } 
                });
              });

